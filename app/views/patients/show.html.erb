<h1><%= @patient.name %></h1>

<h2>Appointments</h2>
<ul>
    <% @patient.appointments.each do |appointment| %>
        <li>
            <%= appointment.readable_time %>
            <br>
            with <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %>
        </li>
    <% end %>
</ul>